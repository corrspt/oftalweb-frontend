<div class="form-group">
  {{#if renderLabel}}
    <label class={{if hasError 'text-danger'}}>
      {{label}} {{#if isRequired}}*{{/if}}
    </label>
  {{/if}}
  {{#basic-dropdown as |dropdown|}}
    <input type="text"
      data-ebd-id="{{dropdown.uniqueId}}-trigger"
      class='form-control {{if hasError 'is-invalid'}}'
      onclick={{dropdown.actions.toggle}}
      value={{if selected (moment-format selected 'DD-MM-YYYY')}}
      >

    {{#dropdown.content class="datepicker-demo-dropdown"}}
      {{#power-calendar class="demo-calendar-small"
        center=center
        onCenterChange=(action (mut center) value="date")
        selected=selected
        onSelect=(action onUpdateValue value="date") as |calendar|}}
        {{calendar.nav}}
        {{calendar.days}}
      {{/power-calendar}}
    {{/dropdown.content}}
  {{/basic-dropdown}}
</div>
